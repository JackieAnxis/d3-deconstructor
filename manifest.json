{
    "manifest_version": 2,

    "name": "D3 Deconstructor",
    "description": "This extension allows the user to deconstruct D3 visualizations on a page.",
    "version": "1.0",
    "icons": {
        "16": "d3logo.png",
        "128": "d3logo.png"
    },

    "content_scripts": [
        {
            "matches": ["file:///*/*", "http://*/*", "https://*/*"],
            "css": ["content.css"],
            "js": ["js/content.js"]
        }
    ],

    "background": {
        "scripts": ["js/background.js"]
    },

    "browser_action": {
        "default_icon": "d3logo.png",
        "default_title": "D3 Deconstructor"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "contextMenus"
    ],

    "web_accessible_resources": [
        "bower_components/sylvester/sylvester.js",
        "bower_components/d3deconstructor/deconstructor.js",
        "bower_components/underscore/underscore.js",
        "bower_components/jquery/dist/jquery.js",
        "js/app.js",
        "js/content.js",
        "js/DataTableController.js",
        "js/directives.js",
        "js/filters.js",
        "js/SchemaModel.js",
        "js/services.js",
        "js/injected.js"
    ],

    "content_security_policy": "script-src 'unsafe-eval' 'self'; object-src 'self'"
}
